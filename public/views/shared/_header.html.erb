<section  id="header">
  <div class="row">
    <% if AppConfig[:pui_hide][:custom] %>
      <div class="col-sm-6">

        <% if Rails.application.assets.find_asset('images/logo.png') %>
          <a href="/"><img class="logo" src="<%= asset_url('assets/images/logo.png') %>" alt="<%= I18n.t('brand.logo_alt') %>" /></a>
        <% else %>
          <a href="/"><img class="logo" src="<%= asset_url('assets/logo.jpg') %>" alt="<%= I18n.t('brand.logo_alt') %>" /></a>
        <% end %>
      </div>
      <div class="col-sm-6 nicholls-title">
      	<ul>
      		<li><%= I18n.t('brand.title') %></li>
      	</ul>
    <% else %>
      <div class="col-sm-8">
        <h1>
          <% unless request.original_fullpath == '/' %>
            <a title="<%=t('brand.title_link_text') %>" href="<%= AppConfig[:public_proxy_url] %>">
          <% end %>
          <%= t('brand.title') %>
          <% unless request.original_fullpath == '/' %>
            </a>
          <% end %>
        </h1>
      </div>
      <div class="col-sm-4 hidden-xs"><img class="logo" src="<%= asset_path(AppConfig[:pui_branding_img]) %>" alt="<%= AppConfig[:pui_branding_img_alt_text] %>" /></div>
    <% end %>

    </div>
  </div>
</section>
